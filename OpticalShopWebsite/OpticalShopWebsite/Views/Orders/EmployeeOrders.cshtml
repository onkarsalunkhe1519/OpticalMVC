@model IEnumerable<OpticalShopWebsite.Models.Order>

@{
    ViewBag.Title = "Ordered Items";
}

<div class="container my-4">
    <h2 class="mb-4">Ordered Items</h2>

    @if (Model.Count() == 0)
    {
        <div class="alert alert-info">No orders found.</div>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Order ID</th>
                    <th>Product ID</th>
                    <th>Order Date</th>
                    <th>Amount (₹)</th>
                    <th>Payment Status</th>
                    <th>Order Status</th>
                    <th>User Email (Product Name)</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.ProductId</td>
                        <td>@order.OrderDate.ToString("dd MMM yyyy")</td>
                        <td>₹@order.Amount</td>
                        <td>@order.PaymentStatus</td>
                        <td>@order.OrderStatus</td>
                        <td>@order.UserEmail</td>
                        <td>
                            <a href="@Url.Action("EditStatus", "Orders", new { orderId = order.Id })" class="btn btn-sm btn-info">Edit Status</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>












