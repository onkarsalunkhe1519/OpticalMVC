@model List<OpticalShopWebsite.Models.Salary>

@{
    ViewData["Title"] = "My Payslips";
}

<div class="container my-5">
    <h2 class="text-center mb-4" style="color:black;"><b>My Payslips</b></h2>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info text-center">
            No payslips found.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Month</th>
                        <th>Year</th>
                        <th>Salary Amount</th>
                        <th>Generated On</th>
                        <th>Download Payslip</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var payslip in Model)
                    {
                        <tr>
                            <td>@payslip.Month</td>
                            <td>@payslip.Year</td>
                            <td>₹@payslip.Amount</td>
                            <td>@payslip.DateGenerated.ToString("dd MMM yyyy")</td>
                            <td>
                                <a href="~/Payslips/@System.IO.Path.GetFileName(payslip.PayslipPath)" target="_blank" class="btn btn-info btn-sm">
                                    <i class="fas fa-download"></i> View / Download
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>






