@model List<OpticalShopWebsite.Models.Salary>

@{
    ViewData["Title"] = "Employee Payslips";
}

<h2 class="text-center my-4" style="color:black;"><b>Employee Payslips</b></h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover ">
        <thead class="thead-dark">
            <tr>
                <th>Employee Email</th>
                <th>Month</th>
                <th>Year</th>
                <th>Salary</th>
                <th>Generated On</th>
                <th>Payslip</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var salary in Model)
            {
                <tr>
                    <td>@salary.EmployeeEmail</td>
                    <td>@salary.Month</td>
                    <td>@salary.Year</td>
                    <td>₹@salary.Amount</td>
                    <td>@salary.DateGenerated.ToString("dd MMM yyyy")</td>
                    <td>
                        <a href="~/Payslips/@System.IO.Path.GetFileName(salary.PayslipPath)" target="_blank" class="btn btn-info btn-sm">
                            View Payslip
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

