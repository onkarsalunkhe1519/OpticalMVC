@{
    ViewData["Title"] = "Add Salary";
}

<h2 class="text-center my-4" style="color:black;"><b>Add Salary for Employee</b></h2>

<div class="container d-flex justify-content-center align-items-center" style="height: 80vh;">
    <div class="card p-4 shadow-sm" style="width: 100%; max-width: 500px;">
        <form method="post" asp-action="AddSalary">
            <div class="form-group mb-3">
                <label for="employeeEmail" class="form-label">Employee</label>
                <select id="employeeEmail" name="employeeEmail" class="form-control">
                    @foreach (var employee in ViewBag.Employees)
                    {
                        <option value="@employee.Email">@employee.Username (@employee.Email)</option>
                    }
                </select>
            </div>

            <div class="form-group mb-3">
                <label for="month" class="form-label">Month</label>
                <input type="text" id="month" name="month" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label for="year" class="form-label">Year</label>
                <input type="number" id="year" name="year" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label for="amount" class="form-label">Salary Amount</label>
                <input type="number" id="amount" name="amount" class="form-control" required />
            </div>

            <button type="submit" class="btn btn-dark w-100">Generate Payslip</button>
        </form>
    </div>
</div>









